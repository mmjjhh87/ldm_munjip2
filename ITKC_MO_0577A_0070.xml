<레벨4 DCI="ITKC_MO_0577A_0070_010_0090_2006_A257_XML" id="ITKC_MO_0577A_0070_010_0090" type="최종정보" 자료생성일="2006-11-30">
				<메타정보>
					<제목정보>
						<제목>郊特牲</제목>
					</제목정보>
					<저자정보 type="필자">
